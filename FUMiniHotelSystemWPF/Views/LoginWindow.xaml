<Window x:Class="FUMiniHotelSystemWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0820" Offset="0"/>
                <GradientStop Color="#1a0d36" Offset="0.5"/>
                <GradientStop Color="#2d1b52" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Branding -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6c3fb5" Offset="0"/>
                        <GradientStop Color="#4a2c7c" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <StackPanel VerticalAlignment="Center" Margin="60">
                    <!-- Logo/Icon -->
                    <Ellipse Width="100" Height="100" Margin="0,0,0,30">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#8b5fd3" Offset="0"/>
                                <GradientStop Color="#6c3fb5" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    
                    <TextBlock Text="🏨" FontSize="60" HorizontalAlignment="Center" Margin="0,-90,0,20"/>
                    
                    <TextBlock Text="FU Mini Hotel" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Management System" 
                               FontSize="18" 
                               Foreground="#b8b8d1" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"/>
                    
                    <TextBlock Text="Hệ thống quản lý khách sạn hiện đại" 
                               FontSize="14" 
                               Foreground="#8888a8" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Right Side - Login Form -->
            <Grid Grid.Column="1">
                <StackPanel VerticalAlignment="Center" Margin="80,0">
                    <!-- Close Button -->
                    <Button Content="✕" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Style="{StaticResource IconButton}"
                            FontSize="20"
                            Margin="0,-50,0,30"
                            Click="CloseButton_Click"/>
                    
                    <TextBlock Text="Đăng nhập" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Chào mừng bạn trở lại!" 
                               FontSize="14" 
                               Foreground="#8888a8" 
                               Margin="0,0,0,40"/>
                    
                    <!-- Email -->
                    <TextBlock Text="Email" 
                               Foreground="#b8b8d1" 
                               FontSize="13"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox" 
                             Height="50" 
                             Style="{StaticResource ModernTextBox}"
                             FontSize="14"/>
                    
                    <!-- Password -->
                    <TextBlock Text="Mật khẩu" 
                               Foreground="#b8b8d1" 
                               FontSize="13"
                               Margin="0,20,0,8"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Height="50" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 FontSize="14"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorTextBlock" 
                               Foreground="#F44336" 
                               Margin="0,15,0,0" 
                               TextWrapping="Wrap"
                               FontSize="13"
                               Visibility="Collapsed"/>
                    
                    <!-- Login Button -->
                    <Button Content="Đăng nhập" 
                            Height="50" 
                            Margin="0,30,0,0" 
                            Style="{StaticResource ModernButton}"
                            FontSize="16"
                            Click="LoginButton_Click"/>
                    
                    <!-- Info -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,30,0,0">
                        <TextBlock Text="💡 " 
                                   Foreground="#8888a8" 
                                   FontSize="12"/>
                        <TextBlock Foreground="#8888a8" 
                                   FontSize="12">
                            <Run Text="Admin: "/>
                            <Run Text="admin@FUMiniHotelSystem.com" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <TextBlock Text="Password: @@abc123@@" 
                               Foreground="#8888a8" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
