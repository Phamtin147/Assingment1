<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryDark">#1a0d2e</Color>
    <Color x:Key="PrimaryPurple">#2d1b69</Color>
    <Color x:Key="PrimaryViolet">#4a2c7c</Color>
    <Color x:Key="AccentPurple">#6c3fb5</Color>
    <Color x:Key="LightPurple">#8b5fd3</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="SidebarDark">#1f0e3d</Color>
    <Color x:Key="SidebarHover">#3d2466</Color>
    <Color x:Key="SidebarSelected">#5c3d99</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundDark">#0f0820</Color>
    <Color x:Key="BackgroundPurple">#1a0d36</Color>
    <Color x:Key="CardBackground">#2d1b52</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextWhite">#ffffff</Color>
    <Color x:Key="TextGray">#b8b8d1</Color>
    <Color x:Key="TextMuted">#8888a8</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryPurpleBrush" Color="{StaticResource PrimaryPurple}"/>
    <SolidColorBrush x:Key="PrimaryVioletBrush" Color="{StaticResource PrimaryViolet}"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}"/>
    <SolidColorBrush x:Key="LightPurpleBrush" Color="{StaticResource LightPurple}"/>
    
    <SolidColorBrush x:Key="SidebarDarkBrush" Color="{StaticResource SidebarDark}"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHover}"/>
    <SolidColorBrush x:Key="SidebarSelectedBrush" Color="{StaticResource SidebarSelected}"/>
    
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundPurpleBrush" Color="{StaticResource BackgroundPurple}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    
    <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhite}"/>
    <SolidColorBrush x:Key="TextGrayBrush" Color="{StaticResource TextGray}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryPurple}" Offset="0.5"/>
        <GradientStop Color="{StaticResource PrimaryViolet}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource AccentPurple}" Offset="0"/>
        <GradientStop Color="{StaticResource LightPurple}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BackgroundDark}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundPurple}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>

