<Window x:Class="Assignment_01.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2ECC71"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF6B6B"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="{Binding DialogTitle}" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  HorizontalAlignment="Center" 
                  Margin="0,0,0,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Customer Full Name -->
                <TextBlock Text="Họ và tên *"/>
                <TextBox Text="{Binding Customer.CustomerFullName, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding ValidationErrors[CustomerFullName]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[CustomerFullName], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Email -->
                <TextBlock Text="Email *"/>
                <TextBox Text="{Binding Customer.EmailAddress, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding ValidationErrors[EmailAddress]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[EmailAddress], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Telephone -->
                <TextBlock Text="Số điện thoại *"/>
                <TextBox Text="{Binding Customer.Telephone, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding ValidationErrors[Telephone]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[Telephone], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Birthday -->
                <TextBlock Text="Ngày sinh *"/>
                <DatePicker SelectedDate="{Binding Customer.CustomerBirthday}"/>
                <TextBlock Text="{Binding ValidationErrors[CustomerBirthday]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[CustomerBirthday], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Password (only for new customer) -->
                <TextBlock Text="Mật khẩu *" 
                          Visibility="{Binding IsNewCustomer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <PasswordBox x:Name="PasswordBox" 
                            Visibility="{Binding IsNewCustomer, Converter={StaticResource BooleanToVisibilityConverter}}"
                            PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock Text="{Binding ValidationErrors[Password]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[Password], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Confirm Password (only for new customer) -->
                <TextBlock Text="Xác nhận mật khẩu *" 
                          Visibility="{Binding IsNewCustomer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                            Visibility="{Binding IsNewCustomer, Converter={StaticResource BooleanToVisibilityConverter}}"
                            PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                <TextBlock Text="{Binding ValidationErrors[ConfirmPassword]}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ValidationErrors[ConfirmPassword], Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- General Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Lưu" 
                   Style="{StaticResource SaveButtonStyle}"
                   Command="{Binding SaveCommand}"
                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Content="Hủy" 
                   Style="{StaticResource CancelButtonStyle}"
                   Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
